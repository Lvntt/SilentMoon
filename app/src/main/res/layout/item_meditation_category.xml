<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ToggleButton
        android:id="@+id/categoryButton"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/ic_category_all"
        android:layout_marginEnd="@dimen/padding_20"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/categoryAll"
        android:textColor="@color/unselectedCategoryTextColor"
        android:textAppearance="@style/meditationCategoryLabel"
        app:layout_constraintEnd_toEndOf="@+id/categoryButton"
        app:layout_constraintStart_toStartOf="@+id/categoryButton"
        app:layout_constraintTop_toBottomOf="@+id/categoryButton" />

</androidx.constraintlayout.widget.ConstraintLayout>