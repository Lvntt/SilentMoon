<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sleep_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_20">

        <ImageView
            android:id="@+id/sleep_music_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/meditation_card_shape"
            android:contentDescription="@null"
            android:src="@drawable/img_night_island"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sleep_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/storyNightIsland"
            android:textAppearance="@style/meditationLongCardTitle"
            android:textColor="@color/sleepMusicTitleColor"
            app:layout_constraintStart_toStartOf="@id/sleep_music_image"
            app:layout_constraintTop_toBottomOf="@id/sleep_music_image" />

        <TextView
            android:id="@+id/sleep_music_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleepMusicDuration"
            android:textAppearance="@style/meditationLongCardSubtitle"
            android:textColor="@color/sleepMusicDescriptionColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sleep_music_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>