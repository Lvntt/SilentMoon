<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleep.welcomesleep.WelcomeSleepFragment">

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:adjustViewBounds="true"
       android:contentDescription="@null"
       android:scaleType="fitXY"
       android:src="@drawable/img_welcome_sleep_bg"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/welcomeSleepTitle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="15dp"
       android:text="@string/welcomeSleepTitle"
       android:textAlignment="center"
       android:textAppearance="@style/welcomeSleepTitle"
       android:textColor="@color/welcomeSleepTitleColor"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/welcomeSleepDescription" />

   <TextView
       android:id="@+id/welcomeSleepDescription"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="68dp"
       android:paddingHorizontal="50dp"
       android:text="@string/welcomeSleepDescription"
       android:textAlignment="center"
       android:textAppearance="@style/welcomeSleepDescription"
       android:textColor="@color/welcomeSleepDescriptionColor"
       app:layout_constraintBottom_toTopOf="@+id/birdsImage"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <ImageView
       android:id="@+id/birdsImage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:contentDescription="@null"
       android:src="@drawable/img_birds"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="@+id/imageView2"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/getStartedButton"
       android:layout_width="match_parent"
       android:layout_height="63dp"
       android:layout_marginHorizontal="@dimen/padding_20"
       android:layout_marginBottom="80dp"
       android:insetTop="0dp"
       android:insetBottom="0dp"
       android:text="@string/getStarted"
       android:textAppearance="@style/welcomeSleepOnButton"
       android:textColor="@color/whiteGray"
       app:cornerRadius="38dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>