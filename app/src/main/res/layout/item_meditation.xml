<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/meditationLayout"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/meditationImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/img_anxiety_release_bg" />

        <TextView
            android:id="@+id/meditationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/anxietyRelease"
            android:textAppearance="@style/meditationTopicTitle"
            android:textColor="@color/meditationTextColor" />

    </FrameLayout>

</FrameLayout>